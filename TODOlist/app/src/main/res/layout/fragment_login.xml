<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frag_login"
    tools:context="com.example.urvish.sharedprefrencelogin.fragments.LoginFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:text="@string/login"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_uname"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        />
    <EditText
        android:id="@+id/edittxt_uname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/editxt_uname"
        android:maxLines="1"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        android:imeOptions="actionNext"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"/>
    <EditText
        android:id="@+id/edittxt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        android:inputType="textPassword"
        android:imeOptions="actionNext"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pin"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"/>
    <EditText
        android:id="@+id/edittxt_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pin"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"
        android:maxLength="4"
        android:inputType="numberPassword"
        android:imeOptions="actionGo"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_margin="@dimen/_8dp"
        android:padding="@dimen/_8dp"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.urvish.javafeatures.classinterface.ClassInterfaceActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/before"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_before_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:padding="@dimen/_10dp"
        android:textSize="@dimen/_20sp" />
    <TextView
        android:id="@+id/txt_before_dev2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:padding="@dimen/_10dp"
        android:textSize="@dimen/_20sp" />
    <TextView
        android:id="@+id/txt_before_hr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:padding="@dimen/_10dp"
        android:textSize="@dimen/_20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/after"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txt_after_dev"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:padding="@dimen/_10dp"
        android:textSize="@dimen/_20sp" />
    <TextView
        android:id="@+id/txt_after_dev2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:padding="@dimen/_10dp"
        android:textSize="@dimen/_20sp" />
    <TextView
        android:id="@+id/txt_after_hr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16dp"
        android:padding="@dimen/_10dp"
        android:textSize="@dimen/_20sp" />
    </LinearLayout>
</ScrollView>
</LinearLayout>
